<mvc:View controllerName="ventilado.ventilado.controller.Avance"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    height="100%" width="100%">

    <Page title="Avance">
        <ScrollContainer width="100%" height="100%" horizontal="true" vertical="true">
            <HBox class="sapUiTinyMargin">
                <VBox width="100%" class="sapUiSmallMargin">
                    <Table items="{path: '/tableData2'}" fixedLayout="Strict" class="sapUiResponsiveMargin sapUiTable" growing="true"
                    growingThreshold="20"
                    growingScrollToLoad="true">
                        <columns>
                            <Column width="100px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Cod Prod." class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="350px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Desc. Producto" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="60px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Total" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="60px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Scan" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="60px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Faltan" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{CI}" class="boldAndLargeText" />
                                    <Text text="{DESCRIPCION}" class="boldAndLargeText" />
                                    <Text text="{TOT}" class="boldAndLargeText" />
                                    <Text text="{SCAN}" class="boldAndLargeText" />
                                    <Text text="{FALTA}" class="boldAndLargeText" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>

                <VBox width="100%" class="sapUiSmallMargin">
                    <Table items="{path: '/tableData'}" fixedLayout="Strict" class="sapUiResponsiveMargin sapUiTable" growing="true"
                    growingThreshold="20"
                    growingScrollToLoad="true">
                        <columns>
                            <Column width="100px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Ruta" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="100px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Cliente" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="100px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Entrega" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="60px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Total" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="60px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Scan" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="60px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Faltan" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="80px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="KgBr Teo" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="80px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="M3 Teo" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                            <Column width="80px">
                                <header>
                                    <VBox class="sapUiTinyMarginBottom">
                                        <Label text="Cub Teo" class="sapUiTinyMargin" />
                                    </VBox>
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{Ruta}" class="boldAndLargeText" />
                                    <Text text="{CLIENTE}" class="boldAndLargeText" />
                                    <Text text="{ENTREGA}" class="boldAndLargeText" />
                                    <Text text="{TOT}" class="boldAndLargeText" />
                                    <Text text="{SCAN}" class="boldAndLargeText" />
                                    <Text text="{FALTA}" class="boldAndLargeText" />
                                    <Text text="{KILO}" class="boldAndLargeText" />
                                    <Text text="{M3}" class="boldAndLargeText" />
                                    <Text text="{Cub TEO}" class="boldAndLargeText" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </HBox>
        </ScrollContainer>
    </Page>
</mvc:View>
